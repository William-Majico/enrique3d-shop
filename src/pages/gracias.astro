---
// Importante: Activamos modo servidor para leer la URL
export const prerender = false;

import Layout from '../layouts/Layout.astro';
import products from '../data/products.json';

// --- LÓGICA (EL CEREBRO ADAPTADO A N1CO) ---
const url = Astro.url;

// 1. Buscamos el ID directo (que mandamos desde crear-pago.ts)
const productIdParam = url.searchParams.get('id');

// 2. Intentamos capturar referencias de N1CO (si las manda) o ponemos valores por defecto
const idTransaccion = url.searchParams.get('n1co_id') || 'Procesado-Exitósamente';
const referenciaCompleta = productIdParam ? `ORDEN-N1CO-${productIdParam.toUpperCase()}` : 'Referencia General';

// Variables por defecto
let downloadUrl = '';
let productTitle = 'Producto Digital';
let productPrice = '0.00';
let productImage = ''; 
let productDesc = 'Gracias por tu compra.';
let productFormats = ['.RAR']; // Valor por defecto

// 3. Procesamos el producto usando el ID directo
if (productIdParam) {
  try {
    const purchasedProduct = products.find(p => p.id === productIdParam);

    if (purchasedProduct) {
      downloadUrl = purchasedProduct.downloadUrl;
      productTitle = purchasedProduct.title;
      productPrice = purchasedProduct.price;
      productImage = purchasedProduct.images[0];
      productDesc = purchasedProduct.description;
      
      // --- LÓGICA PARA FORMATOS ---
      if (purchasedProduct.specs) {
        const rawFormats = purchasedProduct.specs['Formato'] || purchasedProduct.specs['formatos'] || '';
        if (rawFormats) {
            // Separa por comas y quita espacios extra
            productFormats = rawFormats.split(',').map(f => f.trim());
        }
      }
    }
  } catch (error) {
    console.error("Error buscando producto:", error);
  }
}

const fechaHoy = new Date().toLocaleDateString('es-ES', { year: 'numeric', month: 'long', day: 'numeric' });
---

<Layout title="¡Pago Exitoso!" description="Gracias por tu compra en Enrique 3D">
  
  <main class="min-h-screen pt-32 pb-16 px-4 sm:px-6 lg:px-8 bg-gradient-to-br from-orange-50 via-white to-orange-50 dark:from-warm-dark-bg dark:via-gray-900 dark:to-warm-dark-bg transition-colors duration-300">
    
    <div class="max-w-3xl mx-auto">
      
      <div class="text-center mb-8 animate-bounce-in">
        <div class="inline-flex items-center justify-center w-24 h-24 bg-gradient-to-br from-green-400 to-emerald-500 rounded-full shadow-2xl mb-6 animate-scale-in">
          <i class="ri-check-line text-5xl text-white"></i>
        </div>
        <h1 class="text-4xl sm:text-5xl font-bold text-gray-900 dark:text-white mb-3">¡Pago Exitoso!</h1>
        <p class="text-xl text-gray-600 dark:text-gray-300">Gracias por tu compra</p>
        
        <div class="mt-4 inline-block px-4 py-2 bg-orange-100 dark:bg-orange-900/30 text-orange-700 dark:text-orange-300 rounded-lg border border-orange-200 dark:border-orange-800 text-sm font-bold animate-pulse">
          <i class="ri-alert-line mr-1"></i>
          Importante: Descarga tu archivo ahora. Si cierras esta página o recargas, el enlace desaparecerá.
        </div>

      </div>

      <div class="bg-white dark:bg-gray-800 rounded-2xl shadow-xl border border-gray-100 dark:border-gray-700 overflow-hidden mb-6 animate-slide-up">
        
        <div class="p-8 border-b border-gray-100 dark:border-gray-700">
          <div class="flex flex-col sm:flex-row gap-6 items-start sm:items-center">
            
            <div class="w-full sm:w-32 h-32 rounded-xl overflow-hidden shadow-md flex-shrink-0 bg-gray-100 dark:bg-gray-700">
              {productImage ? (
                <img alt={productTitle} class="w-full h-full object-cover" src={productImage} />
              ) : (
                <div class="w-full h-full flex items-center justify-center text-gray-400"><i class="ri-image-line text-3xl"></i></div>
              )}
            </div>
            
            <div class="flex-1">
              <div class="inline-block px-3 py-1 bg-green-100 dark:bg-green-900/20 text-green-700 dark:text-green-400 rounded-full text-sm font-medium mb-3 border border-green-200 dark:border-green-800">
                Compra Confirmada
              </div>
              <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-2">Has adquirido: {productTitle}</h2>
              <p class="text-gray-600 dark:text-gray-400 mb-3 text-sm line-clamp-2">
                {productDesc}
              </p>
              
              <div class="flex flex-wrap gap-2">
                {productFormats.map((formato) => (
                  <span class="px-3 py-1 bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 rounded-lg text-xs font-medium uppercase border border-gray-200 dark:border-gray-600">
                    {formato}
                  </span>
                ))}
              </div>
              
            </div>
          </div>
        </div>

        <div class="p-8 bg-gray-50 dark:bg-gray-900/50">
          <h3 class="text-lg font-bold text-gray-900 dark:text-white mb-4 flex items-center gap-2">
            <i class="ri-file-list-3-line text-orange-500"></i>
            Detalles de la Transacción
          </h3>
          
          <div class="space-y-3">
            <div class="flex flex-col sm:flex-row sm:justify-between sm:items-center gap-1 sm:gap-4 p-4 bg-white dark:bg-gray-800 rounded-xl border border-gray-200 dark:border-gray-700 shadow-sm">
              <span class="text-sm font-medium text-gray-600 dark:text-gray-400">Estado:</span>
              <span class="font-mono text-sm font-bold text-green-600 dark:text-green-400 break-all">Aprobado</span>
            </div>
            <div class="flex flex-col sm:flex-row sm:justify-between sm:items-center gap-1 sm:gap-4 p-4 bg-white dark:bg-gray-800 rounded-xl border border-gray-200 dark:border-gray-700 shadow-sm">
              <span class="text-sm font-medium text-gray-600 dark:text-gray-400">Referencia:</span>
              <span class="font-mono text-sm font-bold text-gray-900 dark:text-white break-all text-xs">{referenciaCompleta}</span>
            </div>
            <div class="flex flex-col sm:flex-row sm:justify-between sm:items-center gap-1 sm:gap-4 p-4 bg-white dark:bg-gray-800 rounded-xl border border-gray-200 dark:border-gray-700 shadow-sm">
              <span class="text-sm font-medium text-gray-600 dark:text-gray-400">Precio Total:</span>
              <span class="text-2xl font-bold text-orange-500">${productPrice}</span>
            </div>
            <div class="flex flex-col sm:flex-row sm:justify-between sm:items-center gap-1 sm:gap-4 p-4 bg-white dark:bg-gray-800 rounded-xl border border-gray-200 dark:border-gray-700 shadow-sm">
              <span class="text-sm font-medium text-gray-600 dark:text-gray-400">Fecha:</span>
              <span class="font-medium text-gray-900 dark:text-white">{fechaHoy}</span>
            </div>
          </div>
        </div>

        <div class="p-8">
          {downloadUrl ? (
            <a 
              href={downloadUrl} 
              target="_blank" 
              class="w-full bg-gradient-to-r from-orange-500 to-orange-600 hover:from-orange-600 hover:to-orange-700 text-white font-bold py-4 px-6 rounded-xl transition-all duration-300 flex items-center justify-center gap-3 shadow-lg hover:shadow-xl hover:-translate-y-1 group"
            >
              <i class="ri-download-cloud-line text-2xl group-hover:animate-bounce"></i>
              <span>Descargar Modelo 3D</span>
            </a>
          ) : (
            <div class="p-4 bg-red-50 dark:bg-red-900/20 text-red-700 dark:text-red-400 rounded-xl border border-red-200 dark:border-red-800 text-center">
              <p class="font-bold mb-1">Enlace no encontrado automáticamente</p>
              <p class="text-sm">Por favor revisa tu correo o contacta a soporte.</p>
            </div>
          )}
          
          <p class="text-center text-sm text-gray-500 dark:text-gray-400 mt-4">
            <i class="ri-information-line"></i> El enlace de descarga es seguro y directo.
          </p>
        </div>

      </div>

      <div class="grid grid-cols-1 sm:grid-cols-3 gap-4 mb-8">
        <div class="bg-white dark:bg-gray-800 rounded-xl p-6 shadow-md border border-gray-100 dark:border-gray-700 text-center">
          <i class="ri-shield-check-line text-3xl text-green-500 mb-2"></i>
          <h4 class="font-bold text-gray-900 dark:text-white mb-1">Compra Segura</h4>
          <p class="text-sm text-gray-600 dark:text-gray-400">Transacción protegida SSL</p>
        </div>
        <div class="bg-white dark:bg-gray-800 rounded-xl p-6 shadow-md border border-gray-100 dark:border-gray-700 text-center">
          <i class="ri-mail-line text-3xl text-blue-500 mb-2"></i>
          <h4 class="font-bold text-gray-900 dark:text-white mb-1">Confirmación</h4>
          <p class="text-sm text-gray-600 dark:text-gray-400">Enviada por email</p>
        </div>
        <div class="bg-white dark:bg-gray-800 rounded-xl p-6 shadow-md border border-gray-100 dark:border-gray-700 text-center">
          <i class="ri-customer-service-2-line text-3xl text-purple-500 mb-2"></i>
          <h4 class="font-bold text-gray-900 dark:text-white mb-1">Soporte</h4>
          <p class="text-sm text-gray-600 dark:text-gray-400">Estamos para ayudarte</p>
        </div>
      </div>

      <div class="text-center">
        <a class="inline-flex items-center gap-2 text-gray-600 dark:text-gray-400 hover:text-orange-500 dark:hover:text-orange-400 font-medium transition-colors group" href="/">
          <i class="ri-arrow-left-line group-hover:-translate-x-1 transition-transform"></i>
          <span>Regresar a la Tienda</span>
        </a>
      </div>

    </div>
  </main>

  <script>
    // Esperamos a que la página cargue
    window.addEventListener('load', () => {
      // Si el navegador soporta esta función moderna
      if (window.history.replaceState) {
        // Creamos la URL limpia (solo el dominio + /gracias)
        const cleanUrl = window.location.protocol + "//" + window.location.host + window.location.pathname;
        // Reemplazamos la URL actual en la barra sin recargar la página
        window.history.replaceState({path: cleanUrl}, '', cleanUrl);
      }
    });
  </script>
</Layout>

<style>
  @keyframes bounce-in {
    0% { opacity: 0; transform: scale(0.3); }
    50% { opacity: 1; transform: scale(1.05); }
    70% { transform: scale(0.9); }
    100% { transform: scale(1); }
  }
  @keyframes scale-in {
    0% { transform: scale(0); opacity: 0; }
    100% { transform: scale(1); opacity: 1; }
  }
  @keyframes slide-up {
    0% { opacity: 0; transform: translateY(30px); }
    100% { opacity: 1; transform: translateY(0); }
  }
  .animate-bounce-in { animation: bounce-in 0.6s cubic-bezier(0.68, -0.55, 0.265, 1.55); }
  .animate-scale-in { animation: scale-in 0.5s ease-out 0.2s both; }
  .animate-slide-up { animation: slide-up 0.6s ease-out 0.3s both; }
</style>